{
    "compilerOptions": {
        "module": "ES2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "*.ts",
        "api/**/*",
        "models/**/*"
    ],
    "ts-node": {
        "esm": true
    }
}